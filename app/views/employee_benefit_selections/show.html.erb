<p id="notice"><%= notice %></p>

<div class="ben-selections">
  <h1><%= @employee.display_name %> - Benefit Selections</h1>
</div>

<div class="ben-selections">
  <% if @employee.benefit_eligible? %>
  <!-- new form object -->
	<%= form_for @rate_selection, url: company_employee_employee_benefit_selection_accept_benefit_path(company_id: @company.id, employee_id: @employee.id, employee_benefit_selection_id: @rate_selection.employee_benefit_selection.id) do |f| %>

    <%= f.fields_for :choices, @rate_selection.choices do |choice_form| %>
      <%= choice_form.text_field :name %>

      <%= choice_form.text_field :label %>
      <%= choice_form.check_box :selected %>
      <br>

    <% end %>

    <%= f.submit %>
  <% end %>

	<% else %>
		<%= "Not eligible" %>
	<% end %>

	
</div>

<%= link_to 'Accept', company_employee_employee_benefit_selection_accept_benefit_path(employee_benefit_selection_id: @employee_benefit_selection.id, employee_id: @employee.id), method: :post, class: "btn btn-success", data: {confirm: "Accept this rate?"} %><%= "  " %>
<%= link_to 'Decline', company_employee_employee_benefit_selection_decline_benefit_path(employee_benefit_selection_id: @employee_benefit_selection.id, employee_id: @employee.id), method: :post, class: "btn btn-danger", data: {confirm: "Decline this rate?"} %>
</br>
</br>
<%= link_to 'Back', company_employee_employee_benefit_selections_path %>
