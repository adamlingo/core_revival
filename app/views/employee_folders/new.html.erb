<% provide(:title, 'New Folder') %>

<p id="notice"><%= notice %></p>

<div class="folders">
  <h1><%="New Folder for #{@employee.first_name} #{@employee.last_name}"%></h1>
</div>

<div class="row">
  <div class="col-md-8">
    <%= form_for @folder, :url => {:action => "create" } do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
        <%= field_errors(@folder, :title) %>
      </div>
      <div class="form-group">
        <%= form.label :documents_files, "Documents" %>
        <%= form.attachment_field :documents_files, multiple: true %>
        <%= field_errors(@folder, :documents_files) %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control" %>
        <%= field_errors(@folder, :description) %>
      </div>
      <div class="form-group">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>
<br>
<div class="links">
  <span class="btn btn-danger"><i class='fa fa-arrow-left'></i>
    <%= link_to "Back", company_folders_path(current_user.company_id) %>
  </span>
</div>