<% provide(:title, 'Employee') %>
<p id="notice"><%= notice %></p>

<div class="wrapper">
  <div class="ee_profile_headers">
    <p>
    	<%= "Name: " %><br>      
      <%= "E-mail: " %><br>      
      <%= "SSN: " %><br>      
      <%= "Date of Birth: " %><br>      
      <%=	"Address: " %><br>      
      <%= "City: " %><br>      
      <%= "State: " %><br>      
      <%= "Zip: " %><br>      
      <%= "Phone number: " %><br>      
      <% if current_user.manager? %>
        <%= "Subscriber ID: " %><br>
      <% else %>
        </br>
      <% end %>
    </p>
  </div>

  <div class="ee_profile_info">
    <p>
      <%= @employee.first_name %> <%= @employee.last_name %><br>
      <%= @employee.email %><br>
      <%= @employee.ssn %><br>
      <%= @employee.date_of_birth %><br>
      <%= @employee.address %><br>
      <%= @employee.city %><br>
      <%= @employee.state %><br>
      <%= @employee.zip %><br>
      <%= @employee.phone_number %><br>
      <% if current_user.manager? %>
        <%= @employee.sub_id %><br>
      <% else %>
        <br>
      <% end %>
    </p>
  </div>
</div>

<br><br>
<div class="links">
  <br><br>
  <%= link_to 'Edit', edit_company_employee_path%> |

  <% if current_user.employee_id == params[:id].to_i %>
    <%= link_to 'Manage Dependents', company_employee_dependents_path(employee_id: params[:id]) %> |
  <% end %>

  <% if current_user.manager? || current_user.admin? %>
    <%= link_to 'Back to Employees', company_employees_path %>
  <% else %>
    <%= link_to 'Home', root_path %>
  <% end %>
</div>