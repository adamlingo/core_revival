<!-- Old form for new EE to tweak -->

<div class='col-xs-12 col-sm-12 col-md-8 col-lg-8 well'>
    <h4 class='text-uppercase'>
      New Employee
    </h4>
    <%= form_for [:manager, @employee], url: {action: "create"}, html: {class: "form-horizontal", id: "newish_employee"} do |f| %>
      <fieldset>
        <legend> </legend><!-- Create new heading or space (formatting) -->
        <div class='form-group'>
          <label class="control-label col-sm-2" for="employee_Image">Image</label>
          <div class='col-sm-10'>
            <!-- /- if @employee.avatar_url.present? AVATAR PLACEHOLDER -->
            <!-- /  = image_tag @employee.avatar_url, class: 'thumbnail col-md-3' -->
            <!-- /= f.file_field :avatar, accept: "image/*", class: 'upload-attachment' -->
            <img alt="User placeholder" class="media-object" src="/assets/shared/user-placeholder.jpeg" />
          </div>
        </div>
        <div class='form-group'>
          <%= label_tag(:first_name, "First Name", class: "control-label col-sm-2") %>
          <div class='col-sm-10'>
            <%= text_field_tag('first_name', nil, class: 'form-control') %>
          </div>
        </div>
        <div class='form-group'>
          <%= label_tag(:last_name, "Last Name", class: "control-label col-sm-2") %>
          <div class='col-sm-10'>
            <%= text_field_tag('last_name', nil, class: 'form-control') %>
          </div>
        </div>
        <div class='form-group'>
          <%= label_tag(:email, "Email", class: "control-label col-sm-2") %>
          <div class='col-sm-10'>
            <%= text_field_tag('email', nil, class: 'form-control') %>
          </div>
        </div>
      </fieldset>
      <fieldset>
        <div class='form-group'>
          <%= label_tag(:date_of_hire, "Date of hire", class: "control-label col-sm-2") %>
          <div class='col-sm-10'>
            <%= date_field_tag 'date_of_hire', Date.today.strftime('%m-%d-%Y'), class: 'form-control' %>
          </div>
        </div>
      </fieldset>
      <div class='text-center'>
        <%= f.submit "Save", class: "btn btn-sm btn-primary" %>
      </div>
    <% end %>
  </div>
  <script>
    window.core.layout.initDatePicker();
  </script>
</div>
