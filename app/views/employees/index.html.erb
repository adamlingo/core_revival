<p id="notice"><%= notice %></p>

<h1><%= @company.name %> - Employees</h1>

<table style="border-collapse: collapse; border: 2px solid black;">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>E-mail</th>
      <th colspan="5">Actions</th>
    </tr>
  </thead>

  <tbody style="border-collapse: collapse; border: 2px solid black;">
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.email %></td>
        <td><%= link_to 'Show', company_employee_path(employee.company, employee) %></td>
        <td><%= link_to 'Edit', edit_company_employee_path(employee.company, employee) %></td>
        <td><%= link_to 'Benefits', company_employee_employee_benefit_selections_path(employee.company, employee) %></td>

        <td><%= link_to 'Salary/Rate', company_employee_salaries_path(employee.company, employee) %></td>
        <td><%= link_to 'Manage Files', company_employee_folders_path(employee.company, employee) %></td>

        <% if false %>
        <td><%= link_to 'Destroy', company_employee_path(employee.company, employee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_company_employee_path %>



