<p id="notice"><%= notice %></p>

<h1>Listing Employees</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.company.name %></td>
        <td><%= link_to 'Show', company_employee_path(employee.company, employee) %></td>
        <td><%= link_to 'Edit', edit_company_employee_path(employee.company, employee) %></td>

        <% if false %>
        <td><%= link_to 'Destroy', company_employee_path(employee.company, employee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

