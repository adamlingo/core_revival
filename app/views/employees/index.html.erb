<h1>Listing Employees</h1>
</br>
<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>E-mail</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.email %></td>
        <td><%= link_to 'View', company_employee_path(employee.company, employee) %></td>
        <td><%= link_to 'Edit', edit_company_employee_path(employee.company, employee) %></td>
        <td><%= link_to 'Salary/Rate', company_employee_salaries_path(employee.company, employee) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

