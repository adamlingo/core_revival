<% provide(:title, 'Edit Dependent') %>
<div class="dependents">
  <% if current_user.manager? || current_user.admin? %>
    <h1> Edit <%= "#{@employee.first_name} #{@employee.last_name}"%></h1>
  <% elsif current_user.employee? %>
    <h1> Edit My Info </h1>
  <% end %>    
</div>
</br>

<div class="dependents">
  <%= form_for @dependent, :url => {:action => "update" } do |f| %>
    <% if @dependent.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@dependent.errors.count, "error") %> prohibited this dependent from being saved:</h2>
      <hr>
        <ul>
        <% @dependent.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label :relationship %><br>
      <%= f.text_field :relationship %>
    </div>    

    <div class="field">
      <%= f.label :date_of_birth %><br>
      <%= f.text_field :date_of_birth, type: :date %>
    </div>

    </br>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  </br>

  <%= link_to 'Show', company_employee_dependent_path %> |
  <% if current_user.manager? || current_user.admin? %>
    <%= link_to 'Back to Employees', company_employees_path %>
  <% else %>
    <%= link_to 'Home', root_path %>
  <% end %>

</div>
