<div class='salaries'>
  <h1>Listing Employee Pay History</h1>
</div>

<div class='salaries'>
  <table>
    <thead>
      <h2><%= @employee.display_name %></h2>
      <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Salary/Rate</th>
        <th>Pay Type</th>
        </tr>
    </thead>

    <tbody>
      <% @salaries.each do |salary| %>
        <tr>
          <td><%= salary.start_date.strftime("%D") %></td>
          <td><%= salary.end_date.strftime("%D") %></td>
          <td><%= salary.rate %></td>
          <td><%= salary.pay_type %></td>          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

