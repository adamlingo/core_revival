<h1>Add New Pay/Salary Rate</h1>

</br>
<%= form_for @salary, :url => company_employee_salaries_path(@salary) do |f| %>

  <div class="field">
    <%= f.label :company_name, "Company: #{@company.name}"%>
  </div>
  
  <div class="field">
      <%= f.label :employee_name, "#{@employee.display_name}"%>
  </div>

  <div class="field">
      <%= f.label :employee_rate, "Rate Per Hour/Year"%>
      <%= f.text_field :rate%>
  </div>
  
    <div class="field">
      <%= f.label :start_date, "Rate Effective What Date?"%>
      <%= f.text_field :start_date%>
  </div>

  <div class="field">
    <%= f.submit class: "btn btn-primary" %>
  </div>
  <div class="col-md-4"></div>
</div>

<% end %>
<%= link_to 'Back', company_employees_path %>