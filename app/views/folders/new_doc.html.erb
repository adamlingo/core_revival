<% provide(:title, 'Add Doc') %>

<p id="notice"><%= notice %></p>

<div class='folders'>
  <h1><%= "Add Document(s): #{@folder.title}" %></h1>
</div>

<div class="row">
  <div class="col-md-8">
    <%= form_for @folder, :url => {:action => "add_doc" } do |form| %>
      <div class="form-group">
        <%= form.attachment_field :documents_files, multiple: true %>
        <%= field_errors(@folder, :documents_files) %>
      </div>
      <div class="form-group">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>

<div class="links">
  <span class="btn btn-danger"><i class='fa fa-arrow-left'></i>
    <%= link_to "Back",  company_folder_path(id: @folder.id) %>
  </span>
</div>