<div class="row">
  <div class="col-md-8">
    <%= form_for @folder, :url => {:action => "add_doc" } do |form| %>
      <div class="form-group">
        <%= form.label :documents_files, "Documents" %>
        <%= form.attachment_field :documents_files, multiple: true %>
        <%= field_errors(@folder, :documents_files) %>
      </div>
      <div class="form-group">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>