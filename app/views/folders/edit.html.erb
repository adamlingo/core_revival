<div class="row">
  <div class="col-md-8">
    <%= form_for @folder, :url => {:action => "update" } do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
        <%= field_errors(@folder, :title) %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control" %>
        <%= field_errors(@folder, :description) %>
      </div>
      <div class="form-group">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>
<p>
  <%= link_to "<- Back", company_folder_path(id: @folder.id) %>
</p>