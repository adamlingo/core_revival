<div class="wrapper login-page">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="main-logo">
        <%= image_tag 'shared/logo.png' %>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <% add_error(resource.errors.full_messages.to_sentence, 'alert') if resource.errors.present? %>
        <div class="input-group bottom-margin">
          <span class="input-group-addon">
            <i class="fa fa-user"></i>
          </span>
          <%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder: t("devise.session_new.email"), class: "form-control input-text" %>
        </div>
        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-lock"></i>
          </span>
          <%= f.password_field :password, autocomplete: "off", placeholder: t("devise.session_new.password"), class: "form-control input-text" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %>
                <%= t("devise.session_new.remember_me") %>
              </label>
            </div>
          </div>
        <% end %>
        <%= f.submit t("devise.session_new.login"), class: "btn btn-success full-width" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
